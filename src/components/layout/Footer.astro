            <span class="port-num">:443</span>linkedin
          </a>
          <a href="https://x.com/_ph0n1x_" target="_blank" rel="noopener" class="nav-item">
            <span class="port-num">:443</span>x/twitter
          </a>
          <a href="mailto:kannan@knn.net.in" class="nav-item">
            <span class="port-num">:25</span>email
          </a>
        </nav>
      </div>

      <!-- Encrypted -->
      <div class="footer-section">
        <h3 class="section-title">
          <span class="title-prompt">~/</span>secure
        </h3>
        <div class="secure-list">
          <div class="secure-item">
            <span class="secure-icon">&#x1F510;</span>
            <span class="secure-name">signal</span>
            <span class="secure-handle">@ph0n1x.08</span>
          </div>
          <div class="secure-item">
            <span class="secure-icon">&#x1F7E2;</span>
            <span class="secure-name">matrix</span>
            <span class="secure-handle">@ph3n1x_8:matrix.org</span>
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="footer-section">
        <h3 class="section-title">
          <span class="title-prompt">~/</span>status
        </h3>
        <div class="status-info">
          <div class="status-row">
            <span class="status-indicator online"></span>
            <span class="status-text">accepting connections</span>
          </div>
          <a href="/contact" class="ping-btn">
            <span class="ping-icon">&#x1F4E1;</span>
            <span>ping me</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="bottom-left">
        <span class="copyright">
          <span class="copy-prompt">~$</span>
          echo "&copy; {currentYear} kannan"
        </span>
      </div>
      <div class="bottom-center">
        <span class="build-info">
          // built with mass caffine + astro + 2am energy
        </span>
