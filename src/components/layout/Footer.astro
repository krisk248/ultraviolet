<style>
  .site-footer {
    background: #0a0a0f;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    margin-top: 0;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem 1.5rem;
  }

  /* Terminal Section */
  .footer-terminal {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.1);
  }

  .terminal-line {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .prompt {
    color: #4ecdc4;
    margin-right: 0.5rem;
  }

  .command {
    color: #fff;
  }

  .neofetch-output {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .ascii-art {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    line-height: 1.2;
    color: #667eea;
    white-space: pre;
  }

  .system-info {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .info-line {
    margin-bottom: 0.25rem;
    color: #888;
  }

  .info-key {
    color: #4ecdc4;
    margin-right: 0.5rem;
  }

  .status-online {
    color: #22c55e;
  }

  /* Footer Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section {
    min-width: 0;
  }

  .section-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .title-prompt {
    color: #667eea;
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-item {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: #666;
    text-decoration: none;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
  }

  .nav-item:hover {
    color: #4ecdc4;
    transform: translateX(4px);
  }

  .nav-prefix {
    color: #4ecdc4;
    margin-right: 0.25rem;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .nav-item:hover .nav-prefix {
    opacity: 1;
  }

  .port-num {
    color: #555;
    font-size: 0.7rem;
    margin-right: 0.5rem;
  }

  /* Secure Section */
  .secure-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .secure-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .secure-icon {
    font-size: 0.875rem;
  }

  .secure-name {
    color: #666;
  }

  .secure-handle {
    color: #22c55e;
    font-size: 0.7rem;
  }

  /* Status Section */
  .status-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .status-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .status-indicator.online {
    background: #22c55e;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .status-text {
    color: #22c55e;
  }

  .ping-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(78, 205, 196, 0.1);
    border: 1px solid rgba(78, 205, 196, 0.3);
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #4ecdc4;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .ping-btn:hover {
    background: rgba(78, 205, 196, 0.2);
    transform: translateY(-2px);
  }

  .ping-icon {
    font-size: 0.875rem;
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
  }

  .bottom-left {
    color: #555;
  }

  .copy-prompt {
    color: #4ecdc4;
  }

  .bottom-center {
    color: #444;
    font-style: italic;
  }

  .bottom-right {
    color: #444;
  }

  .key {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    font-size: 0.625rem;
  }

  /* Easter Egg */
  .easter-line {
    margin-top: 1.5rem;
    text-align: center;
  }

  .easter-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    color: #333;
    font-style: italic;
  }

  /* Light mode */
  :global(html.light) .site-footer {
    background: #fafafa;
    border-color: #eee;
  }

  :global(html.light) .ascii-art {
    color: #667eea;
  }

  :global(html.light) .info-line,
  :global(html.light) .nav-item,
  :global(html.light) .section-title {
    color: #666;
  }

  :global(html.light) .command {
    color: #111;
  }

  :global(html.light) .ping-btn {
    background: rgba(78, 205, 196, 0.05);
  }

  :global(html.light) .footer-terminal,
  :global(html.light) .footer-bottom {
    border-color: #eee;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .neofetch-output {
      flex-direction: column;
      gap: 1rem;
    }

    .ascii-art {
      font-size: 0.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .bottom-center {
      order: 3;
    }
  }
</style>
