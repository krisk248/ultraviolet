---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const featured = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const categoryIcons: Record<string, string> = {
  security: 'üõ°Ô∏è',
  '3d-printing': 'üßä',
  electronics: '‚ö°',
  python: 'üêç',
  ai: 'ü§ñ',
};
---

<section class="section-padding bg-dark-900">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold mb-4">Featured Projects</h2>
      <p class="text-dark-400 max-w-2xl mx-auto text-lg">
        A selection of my best work across security, electronics, 3D printing, and software development
      </p>
    </div>

    <!-- Projects Grid -->
    {featured.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featured.map((project) => (
          <a href={`/projects/${project.slug}`} class="group">
            <article class="card h-full flex flex-col overflow-hidden">
              <!-- Placeholder for image -->
              <div class="h-48 bg-gradient-to-br from-primary-500/10 to-accent-600/10 flex items-center justify-center text-4xl mb-4 rounded-lg group-hover:scale-105 transition-transform duration-300">
                {categoryIcons[project.data.category] || 'üì¶'}
              </div>

              <!-- Content -->
              <div class="flex-1 flex flex-col">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-xs font-semibold px-2 py-1 bg-primary-500/20 text-primary-400 rounded-full">
                    {project.data.category.charAt(0).toUpperCase() + project.data.category.slice(1)}
                  </span>
                </div>

                <h3 class="text-xl font-bold mb-2 group-hover:text-primary-400 transition-colors">
                  {project.data.title}
                </h3>
                <p class="text-dark-400 text-sm mb-4 flex-1">
                  {project.data.description}
                </p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.data.tags.slice(0, 2).map((tag) => (
                    <span class="text-xs px-2 py-1 bg-dark-700 text-dark-300 rounded">
                      {tag}
                    </span>
                  ))}
                </div>

                <!-- Links -->
                <div class="flex gap-2 pt-4 border-t border-dark-700">
                  {project.data.github && (
                    <a
                      href={project.data.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-dark-400 hover:text-primary-500 transition-colors flex items-center gap-1"
                    >
                      GitHub
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4m-4-4l4-4m0 0l-4-4m4 4H3"></path>
                      </svg>
                    </a>
                  )}
                  {project.data.demo && (
                    <a
                      href={project.data.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-dark-400 hover:text-accent-500 transition-colors flex items-center gap-1"
                    >
                      Demo
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4m-4-4l4-4m0 0l-4-4m4 4H3"></path>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-dark-400">No featured projects yet. Check back soon!</p>
      </div>
    )}

    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/projects" class="btn btn-primary">
        View All Projects
      </a>
    </div>
  </div>

  <style is:inline>
    html.light section {
      @apply bg-white;
    }

    html.light .text-dark-400 {
      @apply text-dark-600;
    }
  </style>
</section>
