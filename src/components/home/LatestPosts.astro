---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const latest = allPosts
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<section class="section-padding bg-dark-800/50 border-b border-dark-700">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold mb-4">Latest Articles</h2>
      <p class="text-dark-400 max-w-2xl mx-auto text-lg">
        Thoughts and insights on security, electronics, software development, and maker culture
      </p>
    </div>

    <!-- Blog Grid -->
    {latest.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latest.map((post) => (
          <a href={`/blog/${post.slug}`} class="group">
            <article class="card h-full flex flex-col">
              <!-- Meta -->
              <div class="flex items-center justify-between mb-4">
                <time class="text-sm text-dark-400 group-hover:text-primary-500 transition-colors">
                  {formatDate(post.data.date)}
                </time>
                <span class="text-xs px-2 py-1 bg-accent-500/20 text-accent-400 rounded-full">
                  Article
                </span>
              </div>

              <!-- Title -->
              <h3 class="text-xl font-bold mb-3 group-hover:text-primary-400 transition-colors flex-1">
                {post.data.title}
              </h3>

              <!-- Description -->
              <p class="text-dark-400 text-sm mb-4 flex-1">
                {post.data.description}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="text-xs px-2 py-1 bg-dark-700 text-dark-300 rounded">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Read More -->
              <div class="flex items-center text-sm text-primary-500 group-hover:text-primary-400 pt-4 border-t border-dark-700 transition-colors">
                <span>Read Article</span>
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
            </article>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-dark-400">No blog posts yet. Check back soon!</p>
      </div>
    )}

    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/blog" class="btn btn-primary">
        Read All Articles
      </a>
    </div>
  </div>

  <style is:inline>
    html.light section {
      @apply bg-dark-50 border-dark-100;
    }

    html.light .text-dark-400 {
      @apply text-dark-600;
    }
  </style>
</section>
