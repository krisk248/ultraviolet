<section class="section-padding bg-dark-800/50 border-y border-dark-700">
  <div class="container-custom">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Experience -->
      <div class="text-center group">
        <div class="mb-4 inline-block p-3 bg-gradient-to-br from-primary-500/20 to-accent-600/20 rounded-lg group-hover:from-primary-500/30 group-hover:to-accent-600/30 transition-colors">
          <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
        </div>
        <h3 class="text-4xl font-bold mb-2">8+</h3>
        <p class="text-dark-400">Years Experience</p>
      </div>

      <!-- Projects -->
      <div class="text-center group">
        <div class="mb-4 inline-block p-3 bg-gradient-to-br from-primary-500/20 to-accent-600/20 rounded-lg group-hover:from-primary-500/30 group-hover:to-accent-600/30 transition-colors">
          <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-4xl font-bold mb-2">50+</h3>
        <p class="text-dark-400">Projects Completed</p>
      </div>

      <!-- Technologies -->
      <div class="text-center group">
        <div class="mb-4 inline-block p-3 bg-gradient-to-br from-primary-500/20 to-accent-600/20 rounded-lg group-hover:from-primary-500/30 group-hover:to-accent-600/30 transition-colors">
          <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </div>
        <h3 class="text-4xl font-bold mb-2">30+</h3>
        <p class="text-dark-400">Technologies Used</p>
      </div>

      <!-- Cups of Coffee -->
      <div class="text-center group">
        <div class="mb-4 inline-block p-3 bg-gradient-to-br from-primary-500/20 to-accent-600/20 rounded-lg group-hover:from-primary-500/30 group-hover:to-accent-600/30 transition-colors">
          <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-4xl font-bold mb-2">âˆž</h3>
        <p class="text-dark-400">Cups of Coffee</p>
      </div>
    </div>
  </div>

  <style is:inline>
    html.light section {
      @apply bg-dark-50 border-dark-100;
    }

    html.light .text-dark-400 {
      @apply text-dark-600;
    }
  </style>
</section>
