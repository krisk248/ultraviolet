---
import type { CollectionEntry } from 'astro:content';

interface Props {
  projects: CollectionEntry<'projects'>[];
}

const { projects } = Astro.props;

const categoryIcons: Record<string, string> = {
  security: 'ðŸ›¡ï¸',
  '3d-printing': 'ðŸ§Š',
  electronics: 'âš¡',
  python: 'ðŸ',
  ai: 'ðŸ¤–',
};

const sorted = projects.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {sorted.map((project) => (
    <a href={`/projects/${project.slug}`} class="group">
      <article class="card h-full flex flex-col overflow-hidden">
        <!-- Icon/Placeholder -->
        <div class="h-48 bg-gradient-to-br from-primary-500/10 to-accent-600/10 flex items-center justify-center text-5xl mb-4 rounded-lg group-hover:scale-105 transition-transform duration-300">
          {categoryIcons[project.data.category] || 'ðŸ“¦'}
        </div>

        <!-- Content -->
        <div class="flex-1 flex flex-col">
          <!-- Category Badge -->
          <div class="flex items-center gap-2 mb-3">
            <span class="text-xs font-semibold px-3 py-1 bg-primary-500/20 text-primary-400 rounded-full">
              {project.data.category.charAt(0).toUpperCase() + project.data.category.slice(1)}
            </span>
            <time class="text-xs text-dark-400">
              {project.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
              })}
            </time>
          </div>

          <!-- Title -->
          <h3 class="text-xl font-bold mb-2 group-hover:text-primary-400 transition-colors">
            {project.data.title}
          </h3>

          <!-- Description -->
          <p class="text-dark-400 text-sm mb-4 flex-1">
            {project.data.description}
          </p>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-4">
            {project.data.tags.slice(0, 3).map((tag) => (
              <span class="text-xs px-2 py-1 bg-dark-700 text-dark-300 rounded">
                {tag}
              </span>
            ))}
          </div>

          <!-- Footer with Links -->
          <div class="flex gap-3 pt-4 border-t border-dark-700">
            <div class="flex-1 text-sm text-primary-500 group-hover:text-primary-400 font-medium transition-colors">
              View Project
              <svg class="w-4 h-4 inline ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </div>
            {project.data.github && (
              <a
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-dark-400 hover:text-accent-500 transition-colors"
                aria-label="GitHub repository"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {project.data.demo && (
              <a
                href={project.data.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="text-dark-400 hover:text-accent-500 transition-colors"
                aria-label="Live demo"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4m-4-4l4-4m0 0l-4-4m4 4H3"></path>
                </svg>
              </a>
            )}
          </div>
        </div>
      </article>
    </a>
  ))}
</div>

<style is:inline>
  html.light .text-dark-400 {
    @apply text-dark-600;
  }

  html.light .text-dark-300 {
    @apply text-dark-700;
  }
</style>
