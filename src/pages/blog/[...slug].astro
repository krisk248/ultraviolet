---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toISOString().split('T')[0];
};

const readingTime = (content: string) => {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
};
---

<BaseLayout title={`${post.data.title} | ~/thoughts`} description={post.data.description}>
  <main class="blog-post-page">
    <!-- Terminal Header -->
    <section class="post-header">
      <div class="header-nav">
        <a href="/blog" class="back-link">
          <span class="back-arrow">&#x2190;</span>
          <span>cd ..</span>
        </a>
      </div>
      <div class="header-meta">
        <div class="meta-line">
          <span class="meta-prompt">~$</span>
          <span class="meta-command">cat</span>
          <span class="meta-file">{post.slug}.md</span>
        </div>
        <div class="meta-info">
          <span class="meta-date">[{formatDate(post.data.date)}]</span>
          <span class="meta-reading">{readingTime(post.body)}m read</span>
          {post.data.tags?.map((tag: string) => (
            <span class="meta-tag">#{tag}</span>
          ))}
        </div>
      </div>
      <h1 class="post-title">{post.data.title}</h1>
      <p class="post-description">{post.data.description}</p>
    </section>

    <!-- Post Content -->
    <article class="post-content">
      <Content />
    </article>

    <!-- Post Footer -->
    <section class="post-footer">
      <div class="footer-terminal">
        <p class="footer-line">
          <span class="footer-prompt">~$</span>
          <span class="footer-text">echo "End of transmission"</span>
        </p>
        <p class="footer-output">End of transmission</p>
      </div>
      <div class="footer-nav">
        <a href="/blog" class="nav-link">
          <span class="nav-cmd">ls -la</span>
          <span class="nav-label">more posts</span>
        </a>
        <a href="/contact" class="nav-link">
          <span class="nav-cmd">ping</span>
          <span class="nav-label">get in touch</span>
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .blog-post-page {
    min-height: 100vh;
    background: #0a0a0f;
  }

  /* Header */
  .post-header {
    max-width: 800px;
    margin: 0 auto;
    padding: 6rem 1.5rem 3rem;
  }

  .header-nav {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #666;
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .back-link:hover {
    color: #4ecdc4;
    border-color: rgba(78, 205, 196, 0.3);
    background: rgba(78, 205, 196, 0.1);
  }

  .back-arrow {
    transition: transform 0.2s ease;
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  .header-meta {
    margin-bottom: 1.5rem;
  }

  .meta-line {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
  }

  .meta-prompt {
    color: #4ecdc4;
    margin-right: 0.5rem;
  }

  .meta-command {
    color: #fff;
    margin-right: 0.5rem;
  }

  .meta-file {
    color: #667eea;
  }

  .meta-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .meta-date {
    color: #4ecdc4;
  }

  .meta-reading {
    color: #666;
    padding: 0.125rem 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .meta-tag {
    color: #888;
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.125rem;
    color: #888;
    line-height: 1.6;
  }

  /* Content */
  .post-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
  }

  /* Markdown Styles */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4) {
    color: #fff;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .post-content :global(h1) {
    font-size: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.5rem;
  }

  .post-content :global(h2) {
    font-size: 1.5rem;
    color: #667eea;
  }

  .post-content :global(h3) {
    font-size: 1.25rem;
    color: #4ecdc4;
  }

  .post-content :global(p) {
    color: #b0b0b0;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .post-content :global(a) {
    color: #4ecdc4;
    text-decoration: none;
    border-bottom: 1px solid rgba(78, 205, 196, 0.3);
    transition: all 0.2s ease;
  }

  .post-content :global(a:hover) {
    color: #667eea;
    border-color: rgba(102, 126, 234, 0.5);
  }

  .post-content :global(strong) {
    color: #fff;
    font-weight: 600;
  }

  .post-content :global(em) {
    color: #888;
    font-style: italic;
  }

  .post-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    color: #4ecdc4;
  }

  .post-content :global(pre) {
    background: #1a1a2e !important;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid #667eea;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: #888;
    font-style: italic;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    color: #b0b0b0;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    margin: 3rem 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    border-radius: 12px;
    margin: 1.5rem 0;
  }

  /* Footer */
  .post-footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-terminal {
    padding: 2rem 0;
    text-align: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
  }

  .footer-line {
    color: #666;
    margin-bottom: 0.25rem;
  }

  .footer-prompt {
    color: #4ecdc4;
    margin-right: 0.5rem;
  }

  .footer-text {
    color: #888;
  }

  .footer-output {
    color: #555;
    font-style: italic;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background: rgba(102, 126, 234, 0.1);
    border-color: rgba(102, 126, 234, 0.3);
    transform: translateY(-2px);
  }

  .nav-cmd {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    color: #4ecdc4;
  }

  .nav-label {
    font-size: 0.75rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Light mode */
  :global(html.light) .blog-post-page {
    background: #fafafa;
  }

  :global(html.light) .post-title {
    color: #111;
  }

  :global(html.light) .post-content :global(h1),
  :global(html.light) .post-content :global(h2),
  :global(html.light) .post-content :global(h3),
  :global(html.light) .post-content :global(h4) {
    color: #111;
  }

  :global(html.light) .post-content :global(h2) {
    color: #667eea;
  }

  :global(html.light) .post-content :global(p),
  :global(html.light) .post-content :global(li) {
    color: #444;
  }

  :global(html.light) .post-content :global(strong) {
    color: #111;
  }

  :global(html.light) .post-content :global(pre) {
    background: #f5f5f5 !important;
    border-color: #eee;
  }

  :global(html.light) .back-link,
  :global(html.light) .nav-link {
    background: #fff;
    border-color: #ddd;
  }

  :global(html.light) .meta-command {
    color: #111;
  }
</style>
