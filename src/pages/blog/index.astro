---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (date: Date) => {
  return date.toISOString().split('T')[0];
};

const readingTime = (content: string) => {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
};

// Group posts by year for the log effect
const postsByYear = posts.reduce((acc, post) => {
  const year = post.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<BaseLayout title="/dev/thoughts | Blog" description="Brain dumps, discoveries, and late-night realizations about security, making, and everything in between">
  <main class="blog-page">
    <!-- Terminal Header -->
    <section class="terminal-header-section">
      <div class="terminal-prompt">
        <span class="prompt-path">~/dev/thoughts</span>
        <span class="prompt-symbol">$</span>
        <span class="prompt-command">tail -f brain.log</span>
        <span class="cursor">|</span>
      </div>
      <p class="terminal-output-hint">
        // streaming consciousness since forever
      </p>
    </section>

    <!-- Stats Bar -->
    <section class="stats-section">
      <div class="stats-bar">
        <div class="stat">
          <span class="stat-value">{posts.length}</span>
          <span class="stat-label">entries</span>
        </div>
        <div class="stat-divider">|</div>
        <div class="stat">
          <span class="stat-value">{posts.reduce((acc, p) => acc + readingTime(p.body), 0)}</span>
          <span class="stat-label">min total read</span>
        </div>
        <div class="stat-divider">|</div>
        <div class="stat">
          <span class="stat-value">~2am</span>
          <span class="stat-label">avg write time</span>
        </div>
      </div>
    </section>

    <!-- Category Filter -->
    <section class="filter-section">
      <div class="filter-tabs">
        <button class="filter-tab active" data-filter="all">
          <span class="tab-icon">*</span>
          <span class="tab-label">all</span>
        </button>
        <button class="filter-tab" data-filter="security">
          <span class="tab-icon">&#x1F512;</span>
          <span class="tab-label">security</span>
        </button>
        <button class="filter-tab" data-filter="making">
          <span class="tab-icon">&#x1F527;</span>
          <span class="tab-label">making</span>
        </button>
        <button class="filter-tab" data-filter="code">
          <span class="tab-icon">&#x1F4BB;</span>
          <span class="tab-label">code</span>
        </button>
        <button class="filter-tab" data-filter="thoughts">
          <span class="tab-icon">&#x1F4AD;</span>
          <span class="tab-label">thoughts</span>
        </button>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="posts-section">
      <div class="posts-container">
        {posts.length > 0 ? (
          years.map((year) => (
            <div class="year-group">
              <div class="year-header">
                <span class="year-label">// {year}</span>
                <span class="year-count">{postsByYear[year].length} entries</span>
              </div>
              <div class="posts-list">
                {postsByYear[year].map((post, index) => (
                  <a href={`/blog/${post.slug}`} class="post-entry" data-category={post.data.tags?.[0] || 'thoughts'}>
                    <div class="post-line-number">{String(index + 1).padStart(2, '0')}</div>
                    <div class="post-content">
                      <div class="post-meta">
                        <span class="post-timestamp">[{formatDate(post.data.date)}]</span>
                        <span class="post-reading-time">{readingTime(post.body)}m</span>
                      </div>
                      <h2 class="post-title">{post.data.title}</h2>
                      <p class="post-description">{post.data.description}</p>
                      <div class="post-tags">
                        {post.data.tags?.slice(0, 3).map((tag: string) => (
                          <span class="post-tag">#{tag}</span>
                        ))}
                      </div>
                    </div>
                    <div class="post-arrow">
                      <span>cat</span>
                      <span class="arrow">&#x2192;</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))
        ) : (
          <div class="empty-state">
            <div class="empty-terminal">
              <p class="empty-prompt">~$ cat /dev/thoughts</p>
              <p class="empty-output">cat: /dev/thoughts: File is empty</p>
              <p class="empty-cursor">~$ _</p>
              <p class="empty-message">// the thoughts are brewing... check back after my next 2am session</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Subscribe CTA -->
    <section class="subscribe-section">
      <div class="subscribe-card">
        <div class="subscribe-header">
          <span class="subscribe-prompt">~$</span>
          <span class="subscribe-command">subscribe --to=brain-dumps</span>
        </div>
        <p class="subscribe-description">
          Get notified when I write something new. No spam, just thoughts.
          <br/>
          <span class="subscribe-hint">// I promise to only email you when I actually have something interesting to say</span>
        </p>
        <form class="subscribe-form">
          <div class="input-wrapper">
            <span class="input-prefix">email:</span>
            <input type="email" placeholder="you@example.com" class="subscribe-input" />
          </div>
          <button type="submit" class="subscribe-button">
            <span>./subscribe.sh</span>
          </button>
        </form>
      </div>
    </section>

    <!-- Fun Footer -->
    <section class="blog-footer">
      <div class="footer-content">
        <p class="footer-quote">"The best documentation is the one you write at 2am when you finally figure out the bug"</p>
        <p class="footer-attribution">- me, probably</p>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .blog-page {
    min-height: 100vh;
    background: #0a0a0f;
  }

  /* Terminal Header */
  .terminal-header-section {
    padding: 6rem 1.5rem 2rem;
    text-align: center;
  }

  .terminal-prompt {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(1.25rem, 4vw, 2rem);
    display: inline-flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .prompt-path {
    color: #667eea;
  }

  .prompt-symbol {
    color: #4ecdc4;
  }

  .prompt-command {
    color: #fff;
  }

  .cursor {
    color: #4ecdc4;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .terminal-output-hint {
    margin-top: 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #555;
  }

  /* Stats Bar */
  .stats-section {
    padding: 0 1.5rem 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 9999px;
    font-family: 'JetBrains Mono', monospace;
  }

  .stat {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .stat-value {
    color: #4ecdc4;
    font-weight: 600;
  }

  .stat-label {
    color: #666;
    font-size: 0.75rem;
  }

  .stat-divider {
    color: #333;
  }

  /* Filter Section */
  .filter-section {
    padding: 0 1.5rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .filter-tabs {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

