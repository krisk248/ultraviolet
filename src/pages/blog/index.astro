    min-width: 0;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .post-timestamp {
    color: #4ecdc4;
  }

  .post-reading-time {
    color: #666;
    padding: 0.125rem 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.5rem;
    transition: color 0.2s ease;
  }

  .post-entry:hover .post-title {
    color: #667eea;
  }

  .post-description {
    font-size: 0.875rem;
    color: #888;
    line-height: 1.5;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: #666;
    transition: color 0.2s ease;
  }

  .post-entry:hover .post-tag {
    color: #888;
  }

  .post-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #555;
    transition: all 0.2s ease;
  }

  .post-entry:hover .post-arrow {
    color: #4ecdc4;
  }

  .post-arrow .arrow {
    transition: transform 0.2s ease;
  }

  .post-entry:hover .post-arrow .arrow {
    transform: translateX(4px);
  }

  /* Empty State */
  .empty-state {
    padding: 4rem 0;
  }

  .empty-terminal {
    max-width: 500px;
    margin: 0 auto;
    background: #1a1a2e;
    border-radius: 12px;
    padding: 2rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .empty-prompt {
    color: #4ecdc4;
    margin-bottom: 0.5rem;
  }

  .empty-output {
    color: #ff6b6b;
    margin-bottom: 0.5rem;
  }

  .empty-cursor {
    color: #888;
    margin-bottom: 1.5rem;
  }

  .empty-message {
    color: #555;
    font-size: 0.875rem;
    font-style: italic;
  }

  /* Subscribe Section */
  .subscribe-section {
    padding: 0 1.5rem 4rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .subscribe-card {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 16px;
    padding: 2rem;
  }

  .subscribe-header {
    font-family: 'JetBrains Mono', monospace;
    margin-bottom: 1rem;
  }

  .subscribe-prompt {
    color: #4ecdc4;
  }

  .subscribe-command {
    color: #fff;
  }

  .subscribe-description {
    font-size: 0.875rem;
    color: #888;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .subscribe-hint {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #555;
  }

  .subscribe-form {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .input-wrapper {
    flex: 1;
    min-width: 200px;
    display: flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 0 1rem;
  }

  .input-prefix {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #666;
    margin-right: 0.5rem;
  }

  .subscribe-input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 0.75rem 0;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #fff;
    outline: none;
  }

  .subscribe-input::placeholder {
    color: #555;
  }

  .subscribe-button {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .subscribe-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
  }

  /* Footer */
  .blog-footer {
    padding: 3rem 1.5rem;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-quote {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #666;
    font-style: italic;
    margin-bottom: 0.5rem;
  }

  .footer-attribution {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #444;
  }

  /* Light mode */
  :global(html.light) .blog-page {
    background: #fafafa;
  }

  :global(html.light) .post-entry {
    background: #fff;
    border-color: #eee;
  }

  :global(html.light) .post-title {
    color: #111;
  }

  :global(html.light) .stats-bar {
    background: #fff;
    border-color: #eee;
  }

  :global(html.light) .filter-tab {
    background: #fff;
    border-color: #ddd;
    color: #666;
  }

  :global(html.light) .subscribe-card {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border-color: rgba(102, 126, 234, 0.2);
  }

  :global(html.light) .input-wrapper {
    background: #fff;
    border-color: #ddd;
  }

  :global(html.light) .prompt-command,
  :global(html.light) .subscribe-command {
    color: #111;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .post-entry {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .post-line-number {
      display: none;
    }

    .post-arrow {
      flex-direction: row;
      justify-content: flex-start;
      gap: 0.5rem;
    }

    .stats-bar {
      flex-direction: column;
      gap: 0.5rem;
      border-radius: 12px;
    }

    .stat-divider {
      display: none;
    }

    .filter-tabs {
      gap: 0.375rem;
    }

    .filter-tab {
      padding: 0.375rem 0.75rem;
      font-size: 0.8rem;
    }
  }
</style>

<script>
  // Filter functionality
  const filterTabs = document.querySelectorAll('.filter-tab');
  const postEntries = document.querySelectorAll('.post-entry');

  filterTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update active tab
      filterTabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      // Filter posts
      const filter = tab.dataset.filter;

      postEntries.forEach(post => {
        const category = (post as HTMLElement).dataset.category || '';
        if (filter === 'all' || category.includes(filter)) {
          (post as HTMLElement).style.display = 'grid';
          (post as HTMLElement).style.animation = 'fadeIn 0.3s ease';
        } else {
          (post as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>
