---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactForm from '@components/contact/ContactForm.vue';
---

<BaseLayout title="ping | Contact Kannan" description="Establish a connection - let's build something together">
  <main class="contact-page">
    <!-- Terminal Header -->
    <section class="terminal-header-section">
      <div class="ping-animation">
        <div class="ping-circle"></div>
        <div class="ping-circle delay-1"></div>
        <div class="ping-circle delay-2"></div>
      </div>
      <div class="terminal-prompt">
        <span class="prompt-path">~</span>
        <span class="prompt-symbol">$</span>
        <span class="prompt-command">ping kannan</span>
        <span class="cursor">|</span>
      </div>
      <div class="ping-response">
        <p class="response-line">PING kannan (127.0.0.1): 56 data bytes</p>
        <p class="response-line typing">64 bytes: icmp_seq=0 ttl=64 time=<span class="highlight">ready</span></p>
      </div>
    </section>

    <!-- Status Section -->
    <section class="status-section">
      <div class="status-card">
        <div class="status-header">
          <span class="status-indicator online"></span>
          <span class="status-text">host status: <span class="status-value">ONLINE</span></span>
        </div>
        <div class="status-details">
          <div class="status-row">
            <span class="status-key">uptime:</span>
            <span class="status-val">probably caffeinated</span>
          </div>
          <div class="status-row">
            <span class="status-key">mood:</span>
            <span class="status-val">ready to build</span>
          </div>
          <div class="status-row">
            <span class="status-key">availability:</span>
            <span class="status-val highlight">accepting connections</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="contact-section">
      <div class="contact-grid">
        <!-- Form Section -->
        <div class="form-container">
          <div class="form-header">
            <span class="form-prompt">~$ </span>
            <span class="form-title">establish_connection()</span>
          </div>
          <div class="form-wrapper">
            <ContactForm client:only="vue" />
          </div>
          <p class="form-hint">// response time: usually within 24h, faster if it's 2am</p>
        </div>

        <!-- Channels Section -->
        <div class="channels-container">
          <!-- Direct Channels -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F4E7;</span>
              direct channel
            </h3>
            <div class="channel-list">
              <a href="mailto:kannan@knn.net.in" class="channel-link">
                <span class="channel-protocol">mailto://</span>
                <span class="channel-address">kannan@knn.net.in</span>
              </a>
            </div>
          </div>

          <!-- Open Ports (Social) -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F310;</span>
              open ports
            </h3>
            <div class="port-list">
              <a href="https://github.com/krisk248" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">github</span>
                <span class="port-status">&#x2192;</span>
              </a>
              <a href="https://www.linkedin.com/in/kannan842/" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">linkedin</span>
                <span class="port-status">&#x2192;</span>
              </a>
              <a href="https://x.com/_ph0n1x_" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">x/twitter</span>
                <span class="port-status">&#x2192;</span>
              </a>
            </div>
          </div>

          <!-- Encrypted Channels -->
          <div class="channel-card secure-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F510;</span>
              encrypted channels
            </h3>
            <p class="secure-hint">// for the privacy-conscious</p>
            <div class="secure-list">
              <div class="secure-item">
                <div class="secure-icon signal">
                  <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                </div>
                <div class="secure-info">
                  <span class="secure-name">signal</span>
                  <span class="secure-handle">@ph0n1x.08</span>
                </div>
                <span class="secure-badge">e2e</span>
              </div>
              <div class="secure-item">
                <div class="secure-icon matrix">
                  <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
                    <path d="M.632.55v22.9H2.28V24H0V0h2.28v.55zm7.043 7.26v1.157h.033c.309-.443.683-.784 1.117-1.024.433-.245.936-.365 1.5-.365.54 0 1.033.107 1.481.314.448.208.785.582 1.02 1.108.254-.374.6-.706 1.034-.992.434-.287.95-.43 1.546-.43.453 0 .872.056 1.26.167.388.11.716.286.993.53.276.245.489.559.646.951.152.392.23.863.23 1.417v5.728h-2.349V11.52c0-.286-.01-.559-.032-.812a1.755 1.755 0 0 0-.18-.66 1.106 1.106 0 0 0-.438-.448c-.194-.11-.457-.166-.785-.166-.332 0-.6.064-.803.189a1.38 1.38 0 0 0-.48.499c-.117.199-.192.42-.227.67a5.14 5.14 0 0 0-.033.626v5.489h-2.349v-5.596c0-.254-.004-.503-.018-.747a2.175 2.175 0 0 0-.136-.658 1.01 1.01 0 0 0-.39-.473c-.184-.12-.446-.18-.785-.18-.106 0-.227.016-.361.048a1.67 1.67 0 0 0-.398.152 1.422 1.422 0 0 0-.37.293 1.091 1.091 0 0 0-.27.422c-.064.169-.107.37-.124.601-.018.23-.027.482-.027.747v5.491H5.46V7.81zm13.517 15.64H23.36V0h-2.28v.55h1.649v22.9H21.08v.55z"/>
                  </svg>
                </div>
                <div class="secure-info">
                  <span class="secure-name">matrix/element</span>
                  <span class="secure-handle">@ph3n1x_8:matrix.org</span>
                </div>
                <span class="secure-badge">e2e</span>
              </div>
            </div>
          </div>

          <!-- Current Projects -->
          <div class="channel-card highlight-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F527;</span>
              currently hacking on
            </h3>
            <ul class="project-list">
              <li>security automation tools</li>
              <li>3D printed gadgets</li>
              <li>random 2am ideas</li>
            </ul>
            <p class="collab-hint">// got something interesting? let's break... I mean build it together</p>
          </div>

          <!-- Response Time -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x23F1;</span>
              expected latency
            </h3>
            <div class="latency-info">
              <div class="latency-row">
                <span class="latency-type">email</span>
                <span class="latency-time">&lt; 24h</span>
              </div>
              <div class="latency-row">
                <span class="latency-type">signal/matrix</span>
                <span class="latency-time">~few hours</span>
              </div>
              <div class="latency-row">
                <span class="latency-type">urgent</span>
                <span class="latency-time">~2h (if awake)</span>
              </div>
              <div class="latency-row">
                <span class="latency-type">weekends</span>
                <span class="latency-time">variable (projects mode)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Fun Footer -->
    <section class="contact-footer">
      <div class="footer-terminal">
        <p class="footer-output">--- kannan ping statistics ---</p>
        <p class="footer-stats">connections received: many | response rate: 100% | packet loss: 0%</p>
        <p class="footer-note">// no message too weird, no idea too wild</p>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .contact-page {
    min-height: 100vh;
    background: #0a0a0f;
  }

  /* Terminal Header */
  .terminal-header-section {
    padding: 6rem 1.5rem 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ping-animation {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .ping-circle {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 2px solid rgba(78, 205, 196, 0.3);
    border-radius: 50%;
    animation: ping-expand 3s ease-out infinite;
    transform: translate(-50%, -50%);
  }

  .ping-circle.delay-1 {
    animation-delay: 1s;
  }

  .ping-circle.delay-2 {
    animation-delay: 2s;
  }

  @keyframes ping-expand {
    0% {
      width: 0;
      height: 0;
      opacity: 1;
    }
    100% {
      width: 400px;
      height: 400px;
      opacity: 0;
    }
  }

  .terminal-prompt {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    display: inline-flex;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .prompt-path {
    color: #667eea;
  }

  .prompt-symbol {
    color: #4ecdc4;
  }

  .prompt-command {
    color: #fff;
  }

  .cursor {
    color: #4ecdc4;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .ping-response {
    margin-top: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    position: relative;
    z-index: 1;
  }

  .response-line {
    color: #666;
    margin: 0.25rem 0;
  }

  .response-line.typing {
    color: #888;
  }

  .response-line .highlight {
    color: #4ecdc4;
    font-weight: 600;
  }

  /* Status Section */
  .status-section {
    padding: 0 1.5rem 3rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .status-card {
    background: linear-gradient(135deg, rgba(78, 205, 196, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
    border: 1px solid rgba(78, 205, 196, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .status-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    position: relative;
  }

  .status-indicator.online {
    background: #4ecdc4;
    box-shadow: 0 0 10px rgba(78, 205, 196, 0.5);
  }

  .status-indicator.online::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid rgba(78, 205, 196, 0.3);
    animation: pulse-ring 2s ease-out infinite;
  }

  @keyframes pulse-ring {
    0% { transform: scale(1); opacity: 1; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  .status-text {
    color: #888;
    font-size: 0.875rem;
  }

  .status-value {
    color: #4ecdc4;
    font-weight: 600;
  }

  .status-details {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .status-row {
    display: flex;
    gap: 0.75rem;
    padding: 0.25rem 0;
  }

  .status-key {
    color: #666;
    min-width: 100px;
  }

  .status-val {
    color: #888;
  }

  .status-val.highlight {
    color: #4ecdc4;
  }

  /* Contact Grid */
  .contact-section {
    padding: 0 1.5rem 4rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: 1.2fr 1fr;
    }
  }

  /* Form */
  .form-container {
    background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    overflow: hidden;
  }

  .form-header {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .form-prompt {
    color: #4ecdc4;
  }

  .form-title {
    color: #fff;
  }

  .form-wrapper {
    padding: 1.5rem;
  }

  .form-hint {
    padding: 0 1.5rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #555;
  }

  /* Channels */
  .channels-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .channel-card {
    background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.25rem;
  }

  .channel-card.highlight-card {
    border-color: rgba(102, 126, 234, 0.3);
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  }

  .channel-card.secure-card {
    border-color: rgba(34, 197, 94, 0.3);
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(16, 185, 129, 0.05) 100%);
  }

  .channel-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .channel-icon {
    font-size: 1rem;
  }

  .channel-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .channel-link {
    display: flex;
    gap: 0.25rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .channel-link:hover {
    background: rgba(78, 205, 196, 0.1);
  }

  .channel-protocol {
    color: #666;
  }

  .channel-address {
    color: #4ecdc4;
  }

  /* Ports */
  .port-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .port-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .port-link:hover {
    background: rgba(102, 126, 234, 0.1);
  }

  .port-link:hover .port-status {
    transform: translateX(4px);
  }

  .port-number {
    color: #666;
    font-size: 0.75rem;
  }

  .port-name {
    color: #888;
    flex: 1;
  }

  .port-link:hover .port-name {
    color: #667eea;
  }

  .port-status {
    color: #667eea;
    transition: transform 0.2s ease;
  }

  /* Secure Channels */
  .secure-hint {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: #555;
    margin-bottom: 0.75rem;
  }

  .secure-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .secure-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .secure-item:hover {
    background: rgba(34, 197, 94, 0.1);
  }

  .secure-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    color: #fff;
  }

  .secure-icon.signal {
    background: linear-gradient(135deg, #3a76f0 0%, #2c6bed 100%);
  }

  .secure-icon.matrix {
    background: linear-gradient(135deg, #0dbd8b 0%, #0a9d74 100%);
  }

  .secure-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .secure-name {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .secure-handle {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #22c55e;
  }

  .secure-badge {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    padding: 0.25rem 0.5rem;
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Project List */
  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .project-list li {
    color: #888;
    padding: 0.25rem 0;
    padding-left: 1.25rem;
    position: relative;
  }

  .project-list li::before {
    content: '>';
    position: absolute;
    left: 0;
    color: #667eea;
  }

  .collab-hint {
    margin-top: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: #555;
    font-style: italic;
  }

  /* Latency */
  .latency-info {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .latency-row {
    display: flex;
    justify-content: space-between;
    padding: 0.25rem 0;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.05);
  }

  .latency-row:last-child {
    border-bottom: none;
  }

  .latency-type {
    color: #666;
  }

  .latency-time {
    color: #4ecdc4;
  }

  /* Footer */
  .contact-footer {
    padding: 2rem 1.5rem 4rem;
    text-align: center;
  }

  .footer-terminal {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .footer-output {
    color: #4ecdc4;
    margin-bottom: 0.5rem;
  }

  .footer-stats {
    color: #666;
    margin-bottom: 1rem;
  }

  .footer-note {
    color: #555;
    font-style: italic;
  }

  /* Light mode */
  :global(html.light) .contact-page {
    background: #fafafa;
  }

  :global(html.light) .form-container,
  :global(html.light) .channel-card {
    background: #fff;
    border-color: #eee;
  }

  :global(html.light) .status-card {
    background: linear-gradient(135deg, rgba(78, 205, 196, 0.05) 0%, rgba(102, 126, 234, 0.05) 100%);
    border-color: rgba(78, 205, 196, 0.2);
  }

  :global(html.light) .form-header {
    background: #f5f5f5;
    border-color: #eee;
  }

  :global(html.light) .prompt-command,
  :global(html.light) .form-title {
    color: #111;
  }

  :global(html.light) .channel-card.highlight-card {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  }

  :global(html.light) .channel-card.secure-card {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.03) 0%, rgba(16, 185, 129, 0.03) 100%);
    border-color: rgba(34, 197, 94, 0.2);
  }

  :global(html.light) .secure-item {
    background: rgba(34, 197, 94, 0.05);
  }
</style>
