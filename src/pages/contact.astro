---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactForm from '@components/contact/ContactForm.vue';
---

<BaseLayout title="ping | Contact Kannan" description="Establish a connection - let's build something together">
  <main class="contact-page">
    <!-- Terminal Header -->
    <section class="terminal-header-section">
      <div class="ping-animation">
        <div class="ping-circle"></div>
        <div class="ping-circle delay-1"></div>
        <div class="ping-circle delay-2"></div>
      </div>
      <div class="terminal-prompt">
        <span class="prompt-path">~</span>
        <span class="prompt-symbol">$</span>
        <span class="prompt-command">ping kannan</span>
        <span class="cursor">|</span>
      </div>
      <div class="ping-response">
        <p class="response-line">PING kannan (127.0.0.1): 56 data bytes</p>
        <p class="response-line typing">64 bytes: icmp_seq=0 ttl=64 time=<span class="highlight">ready</span></p>
      </div>
    </section>

    <!-- Status Section -->
    <section class="status-section">
      <div class="status-card">
        <div class="status-header">
          <span class="status-indicator online"></span>
          <span class="status-text">host status: <span class="status-value">ONLINE</span></span>
        </div>
        <div class="status-details">
          <div class="status-row">
            <span class="status-key">uptime:</span>
            <span class="status-val">probably caffeinated</span>
          </div>
          <div class="status-row">
            <span class="status-key">mood:</span>
            <span class="status-val">ready to build</span>
          </div>
          <div class="status-row">
            <span class="status-key">availability:</span>
            <span class="status-val highlight">accepting connections</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="contact-section">
      <div class="contact-grid">
        <!-- Form Section -->
        <div class="form-container">
          <div class="form-header">
            <span class="form-prompt">~$ </span>
            <span class="form-title">establish_connection()</span>
          </div>
          <div class="form-wrapper">
            <ContactForm client:only="vue" />
          </div>
          <p class="form-hint">// response time: usually within 24h, faster if it's 2am</p>
        </div>

        <!-- Channels Section -->
        <div class="channels-container">
          <!-- Direct Channels -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F4E1;</span>
              direct channels
            </h3>
            <div class="channel-list">
              <a href="mailto:hello@kannan.dev" class="channel-link">
                <span class="channel-protocol">mailto://</span>
                <span class="channel-address">hello@kannan.dev</span>
              </a>
            </div>
          </div>

          <!-- Open Ports -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F310;</span>
              open ports
            </h3>
            <div class="port-list">
              <a href="https://github.com/kannan" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">github</span>
                <span class="port-status">&#x2192;</span>
              </a>
              <a href="https://linkedin.com/in/kannan" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">linkedin</span>
                <span class="port-status">&#x2192;</span>
              </a>
              <a href="https://twitter.com/kannan" target="_blank" rel="noopener" class="port-link">
                <span class="port-number">:443</span>
                <span class="port-name">twitter/x</span>
                <span class="port-status">&#x2192;</span>
              </a>
            </div>
          </div>

          <!-- Current Projects -->
          <div class="channel-card highlight-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x1F527;</span>
              currently hacking on
            </h3>
            <ul class="project-list">
              <li>security automation tools</li>
              <li>3D printed gadgets</li>
              <li>random 2am ideas</li>
            </ul>
            <p class="collab-hint">// got something interesting? let's break... I mean build it together</p>
          </div>

          <!-- Response Time -->
          <div class="channel-card">
            <h3 class="channel-title">
              <span class="channel-icon">&#x23F1;</span>
              expected latency
            </h3>
            <div class="latency-info">
              <div class="latency-row">
                <span class="latency-type">email</span>
                <span class="latency-time">&lt; 24h</span>
              </div>
              <div class="latency-row">
                <span class="latency-type">urgent</span>
                <span class="latency-time">~2h (if awake)</span>
              </div>
              <div class="latency-row">
                <span class="latency-type">weekends</span>
                <span class="latency-time">variable (projects mode)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Fun Footer -->
    <section class="contact-footer">
      <div class="footer-terminal">
        <p class="footer-output">--- kannan ping statistics ---</p>
        <p class="footer-stats">connections received: many | response rate: 100% | packet loss: 0%</p>
        <p class="footer-note">// no message too weird, no idea too wild</p>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .contact-page {
    min-height: 100vh;
    background: #0a0a0f;
  }

  /* Terminal Header */
  .terminal-header-section {
    padding: 6rem 1.5rem 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ping-animation {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .ping-circle {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 2px solid rgba(78, 205, 196, 0.3);
    border-radius: 50%;
    animation: ping-expand 3s ease-out infinite;
    transform: translate(-50%, -50%);
  }

  .ping-circle.delay-1 {
    animation-delay: 1s;
  }

  .ping-circle.delay-2 {
    animation-delay: 2s;
  }

  @keyframes ping-expand {
    0% {
      width: 0;
      height: 0;
      opacity: 1;
    }
    100% {
      width: 400px;
      height: 400px;
      opacity: 0;
    }
  }

  .terminal-prompt {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    display: inline-flex;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .prompt-path {
    color: #667eea;
  }

  .prompt-symbol {
    color: #4ecdc4;
  }

  .prompt-command {
    color: #fff;
  }

  .cursor {
    color: #4ecdc4;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .ping-response {
    margin-top: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    position: relative;
    z-index: 1;
  }

  .response-line {
    color: #666;
    margin: 0.25rem 0;
  }

  .response-line.typing {
    color: #888;
  }

  .response-line .highlight {
    color: #4ecdc4;
    font-weight: 600;
  }

  /* Status Section */
  .status-section {
    padding: 0 1.5rem 3rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .status-card {
    background: linear-gradient(135deg, rgba(78, 205, 196, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
    border: 1px solid rgba(78, 205, 196, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .status-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    position: relative;
  }

  .status-indicator.online {
    background: #4ecdc4;
    box-shadow: 0 0 10px rgba(78, 205, 196, 0.5);
  }

  .status-indicator.online::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid rgba(78, 205, 196, 0.3);
    animation: pulse-ring 2s ease-out infinite;
  }

  @keyframes pulse-ring {
    0% { transform: scale(1); opacity: 1; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  .status-text {
    color: #888;
    font-size: 0.875rem;
  }

  .status-value {
    color: #4ecdc4;
    font-weight: 600;
  }

  .status-details {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .status-row {
    display: flex;
    gap: 0.75rem;
    padding: 0.25rem 0;
  }

  .status-key {
    color: #666;
    min-width: 100px;
  }

  .status-val {
    color: #888;
  }

  .status-val.highlight {
    color: #4ecdc4;
  }

  /* Contact Grid */
  .contact-section {
    padding: 0 1.5rem 4rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: 1.2fr 1fr;
    }
  }

  /* Form */
  .form-container {
    background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    overflow: hidden;
  }

  .form-header {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .form-prompt {
    color: #4ecdc4;
  }

  .form-title {
    color: #fff;
  }

  .form-wrapper {
    padding: 1.5rem;
  }

  .form-hint {
    padding: 0 1.5rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #555;
  }

  /* Channels */
  .channels-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .channel-card {
    background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.25rem;
  }

  .channel-card.highlight-card {
    border-color: rgba(102, 126, 234, 0.3);
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  }

  .channel-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .channel-icon {
    font-size: 1rem;
  }

  .channel-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .channel-link {
    display: flex;
    gap: 0.25rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .channel-link:hover {
    background: rgba(78, 205, 196, 0.1);
  }

  .channel-protocol {
    color: #666;
  }

  .channel-address {
    color: #4ecdc4;
  }

  /* Ports */
  .port-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .port-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .port-link:hover {
    background: rgba(102, 126, 234, 0.1);
  }

  .port-link:hover .port-status {
    transform: translateX(4px);
  }

  .port-number {
    color: #666;
    font-size: 0.75rem;
  }

  .port-name {
    color: #888;
    flex: 1;
  }

  .port-link:hover .port-name {
    color: #667eea;
  }

  .port-status {
    color: #667eea;
    transition: transform 0.2s ease;
  }

  /* Project List */
  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .project-list li {
    color: #888;
    padding: 0.25rem 0;
    padding-left: 1.25rem;
    position: relative;
  }

  .project-list li::before {
    content: '>';
    position: absolute;
    left: 0;
    color: #667eea;
  }

  .collab-hint {
    margin-top: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: #555;
    font-style: italic;
  }

  /* Latency */
  .latency-info {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .latency-row {
    display: flex;
    justify-content: space-between;
    padding: 0.25rem 0;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.05);
  }

  .latency-row:last-child {
    border-bottom: none;
  }

  .latency-type {
    color: #666;
  }

  .latency-time {
    color: #4ecdc4;
  }

  /* Footer */
  .contact-footer {
    padding: 2rem 1.5rem 4rem;
    text-align: center;
  }

  .footer-terminal {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }

  .footer-output {
    color: #4ecdc4;
    margin-bottom: 0.5rem;
  }

  .footer-stats {
    color: #666;
    margin-bottom: 1rem;
  }

  .footer-note {
    color: #555;
    font-style: italic;
  }

  /* Light mode */
  :global(html.light) .contact-page {
    background: #fafafa;
  }

  :global(html.light) .form-container,
  :global(html.light) .channel-card {
    background: #fff;
    border-color: #eee;
  }

  :global(html.light) .status-card {
    background: linear-gradient(135deg, rgba(78, 205, 196, 0.05) 0%, rgba(102, 126, 234, 0.05) 100%);
    border-color: rgba(78, 205, 196, 0.2);
  }

  :global(html.light) .form-header {
    background: #f5f5f5;
    border-color: #eee;
  }

  :global(html.light) .prompt-command,
  :global(html.light) .form-title {
    color: #111;
  }

  :global(html.light) .channel-card.highlight-card {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  }
</style>
